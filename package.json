{
  "name": "ulisp-wasm",
  "version": "4.8.0",
  "description": "uLisp on WebAssembly",
  "type": "module",
  "scripts": {
    "start": "vite",
    "dev": "concurrently --names web,wasm 'vite' 'bun run dev:web'",
    "build:site": "run-s clean:site build:site:* generate:site",
    "build:site:client": "vite build",
    "build:site:server": "vite build --ssr src/site/server.tsx",
    "generate:site": "node build/server/server.js",
    "clean:site": "rm -rf build",
    "build": "bun build:site",
    "build:all": "bun build:web && bun build:site && bun build:node",
    "build:web": "bun build.ts build:web",
    "build:node": "mkdir -p node && bun run build.ts build:node",
    "build:wasi": "mkdir -p wasi && bun build.ts build:wasi",
    "emcc": "docker compose run --remove-orphans --rm builder emcc",
    "emcc:down": "docker compose down --remove-orphans",
    "emcc:remove": "docker compose down --rmi local",
    "dev:web": "chokidar \"src/*.c\" \"src/*.h\" --initial --silent --command 'bun run build:web'",
    "dev:node": "chokidar \"src/**\" \"node/**/*.js\" --ignore \"**/ulisp.js\" --initial --silent --command 'bun run build:node && bun tests/index.ts'",
    "test": "bun run tests/index.ts",
    "test:dev": "chokidar \"tests/**/*.ts\" --initial --silent --command 'bun tests/index.ts'",
    "tdd": "concurrently --names wasm,test 'bun run dev:node' 'bun run test:dev'",
    "update": "git-subrepo pull builder",
    "format": "prettier -w src"
  },
  "dependencies": {
    "@codemirror/autocomplete": "^6.18.6",
    "@codemirror/commands": "^6.8.1",
    "@codemirror/language": "^6.11.0",
    "@codemirror/lint": "^6.8.5",
    "@codemirror/merge": "^6.10.0",
    "@codemirror/search": "^6.5.10",
    "@codemirror/state": "^6.5.2",
    "@codemirror/view": "^6.36.7",
    "@lezer/lr": "^1.4.2",
    "@preact/signals": "^2.0.4",
    "base64-compressor": "^1.0.3",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-router": "7.5.3"
  },
  "devDependencies": {
    "@tailwindcss/vite": "4.1.5",
    "@types/node": "22.15.16",
    "@types/react": "19.1.3",
    "@types/react-dom": "19.1.3",
    "@vitejs/plugin-react-swc": "3.9.0",
    "@nextjournal/lang-clojure": "^1.0.0",
    "@tangible/git-subrepo": "^1.0.1",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^9.1.2",
    "npm-run-all": "4.1.5",
    "prettier": "3.5.3",
    "sass-embedded": "^1.87.0",
    "tailwindcss": "4.1.5",
    "testra": "^2.1.5",
    "typescript": "5.8.3",
    "vite-tsconfig-paths": "5.1.4",
    "vite": "6.3.5"
  }
}